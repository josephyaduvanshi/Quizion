<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Slightly transparent background for a glowing effect -->
    <solid android:color="#0A001A" />

    <!-- Neon border effect -->
    <stroke
        android:width="2dp"
        android:color="#BB86FC" /> <!-- or use @color/md_theme_light_primary -->

    <corners android:radius="8dp" />

    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
